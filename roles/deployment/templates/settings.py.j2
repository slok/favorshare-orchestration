        "HOST": "{{ item.value.db_host }}",
        "PORT": "{{ item.value.db_port }}",
    }
}

INTERNAL_IPS = (
    {% for ips in item.value.internal_ips %}
    "{{ ips }}",
    {% endfor %}
)

